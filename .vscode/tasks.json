{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Build Kernel Module",
          "type": "shell",
          "command": "make",
          "options": {
              "cwd": "${workspaceFolder}/kernel_module"
          },
          "group": "build",
          "problemMatcher": []
      },
      {
          "label": "Clean Kernel Module",
          "type": "shell",
          "command": "make clean",
          "options": {
              "cwd": "${workspaceFolder}/kernel_module"
          },
          "group": "build",
          "problemMatcher": []
      },
      {
          "label": "Build User App (Makefile)",
          "type": "shell",
          "command": "make",
          "options": {
              "cwd": "${workspaceFolder}/app"
          },
          "group": "build",
          "problemMatcher": []
      },
      {
          "label": "Run User App",
          "type": "shell",
          "command": "./app",
          "options": {
              "cwd": "${workspaceFolder}/app"
          },
          "group": {
              "kind": "test",
              "isDefault": true
          },
          "problemMatcher": []
      }
  ]
}
